<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="lg" class="com.lec.basic.poly1.LGTV" init-method="initMethod"/>
	<!--
	
		init-method    :   초기화   작업 메서드
		destroy-method : 객체삭제전 작업 메서드
		scope          : singleton(기본은 싱글톤객체로 생성)
		               : prototype(다중 객체생성)
	
	 -->
	
     <bean id="ss" class="com.lec.basic.poly1.SamsungTV" scope="singleton"/>  	
	
</beans>
